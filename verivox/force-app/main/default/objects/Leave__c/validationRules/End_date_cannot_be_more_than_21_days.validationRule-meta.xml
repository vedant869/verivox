<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>End_date_cannot_be_more_than_21_days</fullName>
    <active>true</active>
    <errorConditionFormula>End_Date__c &gt; (Start_Date__c + 21)</errorConditionFormula>
    <errorMessage>End date cannot be after 3 calendar weeks. Please correct the end date</errorMessage>
</ValidationRule>
